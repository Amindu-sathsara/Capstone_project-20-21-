generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//models for the users to
model User {
  id        String   @id @map("_id") @db.ObjectId
  fullName  String
  nicNo     String
  email     String   @unique
  contactNo String
  userType  String
}

model childProfile {
  id String @id @map("_id") @db.ObjectId
  fullName String
  birthWeight String
  birthHeight String
  alegies String
  medicalRecords String
  vaccinationDetails String
  parentNic String @unique
  


}